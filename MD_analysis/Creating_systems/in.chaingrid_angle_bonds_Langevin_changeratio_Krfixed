label nloop
variable factor index 625.0 #20.0 100.0

######################### Setting the sytem ####################################
# Set variables
variable theta0 equal 180.0
variable Kbond equal 200.0#2000.0
variable Kangle equal ${Kbond}*${factor}
variable T equal 310
variable gridspacing equal 4

# 3d Lennard-Jones gas
units nano
dimension 3
boundary p p p
atom_style full
pair_style zero 10.0 # 
bond_style harmonic
angle_style harmonic

# Making the atoms:
read_data data.chaingrids_N909_Nchains9_Ly3_gridspacing4_twofixed_charge0 #data.chaingrids_N909_Nchains9_Ly3_twofixed #_straight

velocity all create $T 87287 # I can reset the velocities.

pair_coeff * *
bond_coeff * ${Kbond} 1.0
angle_coeff * ${Kangle} ${theta0}

############################ Prepare simulation #####################################

# Minimize really messes up the structure
#minimize 1.0e-4 1.0e-6 100 1000

group movingmonomers type 2

neighbor 1.0 bin
#neigh_modify once no every 1 delay 0 check yes

#fix wallmembrane movingmonomers wall/lj126 zlo 0.0 ${ljparam} 1.0 2.5 units box

fix lgvfix movingmonomers langevin $T $T 100.0 699483
fix 1 movingmonomers nve

############################ Equilibrate ##############################################
run 1333400

####################### Run and write to file #########################################
log log.chaingrid_quadratic_M9N101_gridspacing${gridspacing}_Langevin_Kangle${Kangle}_Kbond${Kbond}_factor${factor}_T$T_theta0is180_twofirst_are_fixed
dump 1 all custom 10000 chaingrid_quadratic_M9N101_gridspacing${gridspacing}_Langevin_Kangle${Kangle}_Kbond${Kbond}_factor${factor}_T$T_theta0is180_twofirst_are_fixed.lammpstrj id type mol x y z vx vy vz # For visualization
thermo 10000
run 10000000
clear
next factor
jump SELF nloop
